package com.integrador.spring.services;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.integrador.spring.models.StateModel;
import com.integrador.spring.repositories.StateRepository;

@Service
public class StateService {
	
	@Autowired
	StateRepository stateRepository;
	
	public List<StateModel> getStates(){
		return stateRepository.findAll();
	}
	
	public StateModel getStateById(int id) {
		StateModel  s= null;
		for(StateModel state:stateRepository.findAll()) {
			if(state.getId()==id) {
				s=state;
			}
		}
		return s;
	}
}
