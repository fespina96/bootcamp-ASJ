package com.integrador.spring.services;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.integrador.spring.models.ConditionModel;
import com.integrador.spring.repositories.ConditionRepository;

@Service
public class ConditionService {

	@Autowired
	ConditionRepository conditionRepository;
	
	public List<ConditionModel> getConditions(){
		return conditionRepository.findAll();
	}
	
	public ConditionModel getConditionById(int id) {
		ConditionModel c = null;
		for(ConditionModel condition:conditionRepository.findAll()) {
			if(condition.getId()==id) {
				c=condition;
			}
		}
		return c;
	}
}
