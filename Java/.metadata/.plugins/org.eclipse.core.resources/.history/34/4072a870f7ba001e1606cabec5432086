package com.integrador.spring.services;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.integrador.spring.models.CountryModel;
import com.integrador.spring.repositories.CountryRepository;

@Service
public class CountryService {

	@Autowired
	CountryRepository countryRepository;
	
	public List<CountryModel> getCountries(){
		return countryRepository.findAll();
	}
	
	public CountryModel getCountryByID(int id) {
		CountryModel c = null;
		for(CountryModel country:countryRepository.findAll()) {
			if(country.getId()==id) {
				c=country;
			}
		}
		return c;
	}
}
